<?xml version="1.0" encoding="UTF-8" ?>
<project name="HelloWorldAnt" default="build" basedir=".">
  <taskdef name="testng" classname="org.testng.TestNGAntTask">
    <classpath>
      <pathelement location="testng-7.6.1.jar"/>
      <pathelement location="slf4j-api-1.7.36.jar"/>
      <pathelement location="slf4j-simple-1.7.36.jar"/>
    </classpath>
  </taskdef>
  <target name="compile" description="コンパイル" depends="init">
    <echo message="コンパイルを開始します。" />
    <mkdir dir="classes"/>
    <javac srcdir="src" destdir="classes" />
  </target>
  <target name="build" depends="compile"/>
  <target name="test" depends="compile">
    <testng classpath="${test.classpath}: ${test.dest}">
      <xmlfileset dir="${ws.home}" includes="AllTests.xml"/>
    </testng> 	
    <!--junit fork="false" haltonerror="true" haltonfailure="true"
       showoutput="false">
      <test name=""/>
      <classpath path="test"/>
    </junit-->
  </target>
  <target name="clean" description="ビルド成果物削除">
    <delete dir="classes" />
  </target>
</project>
